@{
    ViewBag.Title = "ShowAllRestaurants";
    Layout = "~/Views/Shared/_NGOLayout.cshtml";
}

<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Add your custom CSS styles here */
    body {
        background-color: #f8f9fa; /* Set a light background color */
    }

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    table {
        margin-top: 20px;
    }

    th, td {
        text-align: center;
    }

    /* Add more styles as needed */
</style>

<h2>ShowAllRestaurants</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Location</th>
        <th>Contact Person</th>
        <th>Contact Number</th>
        <th>Email</th>
    </tr>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.RestaurantID</td>
            <td>@r.RestaurantName</td>
            <td>@r.RestaurantLocation</td>
            <td>@r.RestaurantContactPerson</td>
            <td>@r.RestaurantContactNumber</td>
            <td>@r.RestaurantEmail</td>
        </tr>
    }
</table>
