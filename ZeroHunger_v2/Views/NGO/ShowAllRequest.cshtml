@{
    ViewBag.Title = "ShowAllRequest";
    Layout = "~/Views/Shared/_NGOLayout.cshtml";
}

<!-- Include Bootstrap CSS -->
<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    /* Add your custom CSS styles here */
    body {
        background-color: #f8f9fa; /* Set a light background color */
    }

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    table {
        margin-top: 20px;
    }

    th, td {
        text-align: center;
    }

    /* Add more styles as needed */
</style>

<h2>ShowAllRequest</h2>

<table class="table table-bordered">
    <tr>
        <th>Request ID</th>
        <th>Restaurant Name</th>
        <th>Request Time</th>
        <th>Max Preservation Time</th>
        <th>Food Details</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    @foreach (var cr in Model)
    {
        <tr>
            <td>@cr.RequestID</td>
            <td>@cr.Restaurant.RestaurantName</td>
            <td>@cr.RequestTime</td>
            <td>@cr.MaxPreservationTime</td>
            <td>@cr.FoodDetails</td>
            <td>@cr.Status</td>
            <td>
                <a href="/NGO/AssignEmployee/@cr.RequestID" class="btn btn-primary">Accept Request</a>
                <a href="/NGO/RejectRequest/@cr.RequestID" class="btn btn-danger">Reject</a>
            </td>
        </tr>
    }
</table>
