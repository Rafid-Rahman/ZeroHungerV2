@{
    ViewBag.Title = "ShowAllAssignments";
    Layout = "~/Views/Shared/_NGOLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa; 
    }

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    table {
        margin-top: 20px;
    }

    th, td {
        text-align: center;
    }

</style>

<h2>ShowAllAssignments</h2>

<table class="table table-bordered">
    <tr>
        <th>Assignment ID</th>
        <th>Employee Name</th>
        <th>Restaurant</th>
        <th>Food Details</th>
        <th>Assignment Time</th>
        <th>Assignment Status</th>
    </tr>
    @foreach (var a in Model)
    {
        <tr>
            <td>@a.AssignmentID</td>
            <td>@a.User.Name</td>
            <td>@a.Request.Restaurant.RestaurantName</td>
            <td>@a.Request.FoodDetails</td>
            <td>@a.AssignmentTime</td>
            <td>@a.Status</td>
        </tr>
    }
</table>
