@{ ViewBag.Title = "PendingRequest";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml"; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Pending Requests</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; 
            padding: 40px;
        }

        h2 {
            margin-top: 20px;
            margin-bottom: 20px;
        }

        table {
            margin-top: 20px;
        }

        th, td {
            text-align: center;
        }

        .btn-danger {
            background-color: #dc3545; 
            border-color: #dc3545;
        }

    </style>
</head>
<body>

    <h2>Pending Requests</h2>

    <table class="table table-bordered">
        <tr>
            <th>Request ID</th>
            <th>Request Time</th>
            <th>Max Preservation Time</th>
            <th>Food Details</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
        @foreach (var cr in Model)
        {
            <tr>
                <td>@cr.RequestID</td>
                <td>@cr.RequestTime</td>
                <td>@cr.MaxPreservationTime</td>
                <td>@cr.FoodDetails</td>
                <td>@cr.Status</td>
                <td><a class="btn btn-danger" href="/restaurant/deleterequest/@cr.RequestID">Cancel</a></td>
            </tr>
        }
    </table>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
