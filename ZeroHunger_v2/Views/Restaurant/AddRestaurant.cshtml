@{ Layout = null; }

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Add Restaurant</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; 
            padding: 20px;
        }

        form {
            max-width: 400px;
            margin: 0 auto;
        }

        input.form-control {
            margin-bottom: 10px;
        }

    </style>
</head>
<body>

    <form action="" method="post">
        <input type="text" name="RestaurantName" class="form-control" placeholder="Restaurant Name" />
        <input type="text" name="RestaurantLocation" class="form-control" placeholder="Location" />
        <input type="text" name="RestaurantContactPerson" class="form-control" placeholder="Contact Person" />
        <input type="text" name="RestaurantContactNumber" class="form-control" placeholder="Contact Number" />
        <input type="email" name="RestaurantEmail" class="form-control" placeholder="Email Address" />
        <input type="hidden" name="RestaurantOwnerID" value="@Session["id"]" />
        <input type="submit" name="submit" class="btn btn-success" value="Add" />
    </form>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
