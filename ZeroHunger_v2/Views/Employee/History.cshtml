@{
    ViewBag.Title = "History";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    body {
        background-color: #f8f9fa; 
    }

    h2 {
        margin-top: 20px;
        margin-bottom: 20px;
    }

    table {
        margin-top: 20px;
    }

    th, td {
        text-align: center;
    }

</style>

<h2>History</h2>

<table class="table table-bordered">
    <tr>
        <th>Restaurant Name</th>
        <th>Location</th>
        <th>Status</th>
        <th>Food Details</th>
        <th>Distributed at</th>
    </tr>
    @foreach (var dr in Model)
    {
        <tr>
            <td>@dr.Request.Restaurant.RestaurantName</td>
            <td>@dr.Request.Restaurant.RestaurantLocation</td>
            <td>@dr.Status</td>
            <td>@dr.Request.FoodDetails</td>
            <td>@dr.DistributionTime</td>
        </tr>
    }
</table>
