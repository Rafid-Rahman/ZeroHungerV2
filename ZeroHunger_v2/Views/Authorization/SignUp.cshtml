@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/_AuthorizationLayout.cshtml";
}

<link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">

<style>
    
    body {
        background-color: #f8f9fa; 
    }

    form {
        margin-top: 50px;
    }

    table {
        width: 100%;
        max-width: 400px; 
        margin: 0 auto;
    }

    td {
        padding: 10px;
    }

    .text-danger {
        color: red;
    }

</style>

<center>
    <form action="" method="post">

        <div class="container">
            <table class="table">
                <tr>
                    <td>Name:</td>
                    <td><input type="text" name="Name" class="form-control" value="@(Model == null? "":Model.Name)" placeholder="Enter Your Name" /></td>
                    <td><span class="text-danger"><i>@Html.ValidationMessage("Name")</i></span></td>
                </tr>
                <tr>
                    <td>Username:</td>
                    <td><input type="text" name="Username" class="form-control" value="@(Model == null? "":Model.Username)" placeholder="Enter Username" /></td>
                    <td> <span class="text-danger"><i>@Html.ValidationMessage("Username")</i></span></td>
                </tr>
                <tr>

                    <td>Password:</td>
                    <td><input type="password" name="Password" class="form-control" value="@(Model == null? "":Model.Password)" placeholder="Enter Password" /></td>
                    <td> <span class="text-danger"><i>@Html.ValidationMessage("Password")</i></span></td>
                </tr>
                <tr>
                    <td>Phone:</td>
                    <td><input type="text" name="Phone" class="form-control" value="@(Model == null? "":Model.Phone)" placeholder="Enter Phone Number" /></td>
                    <td> <span class="text-danger"><i>@Html.ValidationMessage("Phone")</i></span></td>
                </tr>
                <tr>
                    <td>Email:</td>
                    <td><input type="email" name="Email" class="form-control" value="@(Model == null? "":Model.Email)" placeholder="Enter Email Address" /></td>
                    <td> <span class="text-danger"><i>@Html.ValidationMessage("Email")</i></span></td>
                </tr>
                <tr>
                    <td>Address:</td>
                    <td><input type="text" name="Address" class="form-control" value="@(Model == null? "":Model.Address)" placeholder="Enter Address" /></td>
                    <td> <span class="text-danger"><i>@Html.ValidationMessage("Address")</i></span></td>
                </tr>
                <tr>
                    <td>
                        Role:
                        <br />

                        <input type="radio" name="Role" value="ngo">
                        <label>NGO Admin</label><br />
                        <input type="radio" name="Role" value="employee">
                        <label>Employee</label><br />
                        <input type="radio" name="Role" value="restaurant">
                        <label>Restaurant Owner</label><br />
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="hidden" name="Status" value="Available" />
                    </td>
                </tr>

                <br />

                <tr>
                    <td></td>
                    <td align="right"><input type="submit" name="submit" class="btn btn-success" value="Register" /></td>
                </tr>
            </table>
        </div>

    </form>
</center>
